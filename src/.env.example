# Common
CODIMD_DOMAIN=doc.example.com
N8N_DOMAIN=n8n.example.com

# Data Storage Path (Change this to your mounted disk path)
DATA_ROOT=/mnt/data

# CodiMD Database
CODIMD_DB_USER=codimd
CODIMD_DB_PASSWORD=change_me
CODIMD_DB_NAME=codimd

# CodiMD OAuth2 (Microsoft Entra ID Example)
CODIMD_OAUTH2_PROVIDERNAME=Entra ID
CODIMD_OAUTH2_SCOPE=User.Read
CODIMD_OAUTH2_CLIENT_ID=your_client_id
CODIMD_OAUTH2_CLIENT_SECRET=your_client_secret
CODIMD_OAUTH2_AUTHORIZATION_URL=https://login.microsoftonline.com/your_tenant_id/oauth2/v2.0/authorize
CODIMD_OAUTH2_TOKEN_URL=https://login.microsoftonline.com/your_tenant_id/oauth2/v2.0/token
CODIMD_OAUTH2_USER_PROFILE_URL=https://graph.microsoft.com/v1.0/me
CODIMD_OAUTH2_USER_PROFILE_DISPLAY_NAME_ATTR=displayName
CODIMD_OAUTH2_USER_PROFILE_USERNAME_ATTR=userPrincipalName
CODIMD_OAUTH2_USER_PROFILE_EMAIL_ATTR=mail

# CodiMD Azure Storage
CODIMD_AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account_name;AccountKey=your_account_key;EndpointSuffix=core.windows.net
CODIMD_AZURE_CONTAINER=contents

# n8n Database
N8N_DB_USER=n8n
N8N_DB_PASSWORD=change_me
N8N_DB_NAME=n8n

# n8n Secrets
N8N_THREADS_ACCESS_TOKEN=your_threads_access_token
N8N_EXCHANGE_API_KEY=your_exchange_api_key
